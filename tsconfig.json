{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop":true,
    "moduleResolution": "node",
    "strict": false,
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./dist",
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["**/node_modules/*", "**/*.spec.ts"]
}
